<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/musicianRank_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="1"
        android:textColor="@color/md_red_300"
        android:textSize="36dp"
        android:textStyle="italic"
        android:typeface="serif" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/musicianRank_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/musicianRank_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="5dp"
            android:text="title"
            android:textColor="@color/musicTextColorPrimary"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/musicianRank_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="5dp"
            android:text="subtitle"
            android:textColor="@color/musicTextColorSecondary"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>